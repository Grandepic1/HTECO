<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.RegisterController"
           style="-fx-background-color: #f8fafc;">

    <!-- Card -->
    <VBox spacing="18"
          alignment="CENTER"
          maxWidth="380"
          style="
            -fx-background-color: white;
            -fx-padding: 32;
            -fx-background-radius: 16;
            -fx-border-radius: 16;
            -fx-border-color: #e5e7eb;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 20, 0, 0, 6);
          ">

        <!-- Header -->
        <VBox spacing="6" alignment="CENTER">
            <Label text="ðŸŒ¿" style="-fx-font-size: 36;"/>
            <Label text="Buat Akun Baru"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
            <Label text="Mulai perjalanan hijau perusahaanmu."
                   style="-fx-font-size: 12; -fx-text-fill: #64748b;"/>
        </VBox>

        <!-- Nama -->
        <VBox spacing="4">
            <Label text="NAMA LENGKAP"
                   style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <TextField fx:id="nameField"
                       promptText="Alex John"
                       styleClass="input"/>
        </VBox>
         <Label fx:id="errorName" style="-fx-text-fill: red;"/>

        <!-- Email -->
        <VBox spacing="4">
            <Label text="EMAIL KANTOR"
                   style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <TextField fx:id="emailField"
                       promptText="alex@company.com"
                       styleClass="input"/>
        </VBox>

        <!-- Password -->
        <VBox spacing="4">
            <Label text="PASSWORD"
                   style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <PasswordField fx:id="passwordField"
                           promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                           styleClass="input"/>
        </VBox>

        <!-- Confirm Password -->
        <VBox spacing="4">
            <Label text="KONFIRMASI PASSWORD"
                   style="-fx-font-size: 10; -fx-font-weight: bold; -fx-text-fill: #64748b;"/>
            <PasswordField fx:id="confirmPasswordField"
                           promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                           styleClass="input"/>
        </VBox>

        <!-- Register Button -->
        <Button fx:id="registerButton"
                text="Daftar Sekarang"
                onAction="#onRegister"
                maxWidth="Infinity"
                style="
                  -fx-background-color: #0f172a;
                  -fx-text-fill: white;
                  -fx-font-weight: bold;
                  -fx-background-radius: 14;
                  -fx-padding: 12;
                "/>

        <!-- Login link -->
        <HBox spacing="6" alignment="CENTER">
            <Label text="Sudah punya akun?"
                   style="-fx-font-size: 12; -fx-text-fill: #64748b;"/>
            <Hyperlink text="Login"
                       onAction="#onLogin"
                       style="-fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
        </HBox>

    </VBox>
</StackPane>
